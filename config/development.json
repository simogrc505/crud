{
  "db": {
    "client": "mysql2",
    "connection": {
      "host": "db",
      "port": "3306",
      "user": "root",
      "password": "root",
      "database": "app"
    },
    "pool": {
      "min": 0,
      "max": 7
    },
    "migrations": {
      "directory": "./priv/migrations"
    },
    "seeds": {
      "directory": "./priv/seeds/dev"
    },
    "useNullAsDefault": true,
    "debug": false
  },
  "endpoints": {
    "user": "https://internal-user.universe.corley.it"
  },
  "log": {
    "name": "app",
    "base": {
      "region": "local",
      "env": "development"
    },
    "enabled": false,
    "redact": [
      "req.headers.authorization"
    ]
  }
}

