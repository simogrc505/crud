{
  "db": {
    "host": "mongodb://db:27017/app",
    "options": {
      "useNewUrlParser": true,
      "useFindAndModify": false,
      "useUnifiedTopology": true,
      "autoIndex": false
    }
  },
  "log": {
    "name": "app",
    "base": {
      "region": "local",
      "env": "development"
    },
    "enabled": true,
    "redact": [
      "req.headers.authorization"
    ]
  },
  "host_name": "http://balancer"
}
